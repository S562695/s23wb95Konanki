  - let results=[{Oceans_name: "Indian Ocean",Conti_name:"Asia",population:46,000,000,000},{Oceans_name: "Pacific Ocean",Conti_name:"North America",population:579,000,000},{Oceans_name: "Artic Ocean",Conti_name:"Australia",population:26,000,000}]
